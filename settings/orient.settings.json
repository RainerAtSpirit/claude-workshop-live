{
  "name": "orient",
  "description": "Context-aware codebase orientation agent",
  "settings": {
    "model": "claude-3-5-sonnet-latest",
    "temperature": 0.2,
    "maxTokens": 8192
  },
  "systemPromptMode": "append",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[orient] Search completed, analyzing results...'"
          }
        ]
      }
    ]
  }
}